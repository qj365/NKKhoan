@using NKKhoan.Areas.Admin.ViewModel
@model IEnumerable<NKKhoan.Models.CongViec>

@{ ViewBag.Title = "Index";
Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Công việc</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <!--Truy vấn-->
        <div class="card card-default collapsed-card" id="card-id">

            <div class="card-header">
                <h3 class="card-title">Truy vấn</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus" id="button-collapse"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Job", FormMethod.Get))
                {
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            
                            @Html.DropDownList("stv", new List<SelectListItem>
                                                            {
                                                new SelectListItem{ Text="Chọn truy vấn", Value=""},
                                                new SelectListItem{ Text="Thông tin công việc có đơn giá lớn hơn đơn giá trung bình", Value="tv1"},
                                                new SelectListItem{ Text="Thông tin công việc có đơn giá nhỏ hơn đơn giá trung bình", Value="tv2"}
                                                }, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                    <div class="row" style="padding: 0px 7.5px;">
                        <div class="input-group input-group-lg">
                            
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-lg btn-default" >
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>}
            </div>

        </div>
        @*search*@
        <div class="card card-default collapsed-card" id="card-id">

            <div class="card-header">
                <h3 class="card-title">Tìm kiếm</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-plus" id="button-collapse"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Index", "Job", FormMethod.Get))
                {
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            <label>Đơn giá: Từ</label>
                            <input type="number" name="minprice" id="minprice" value="" class="form-control" />
                            <span style=" width: 7px; height: 2px; font-size: 0px; display: inline-block; background: rgb(154, 154, 154); margin: 0px 4px; vertical-align: middle; position: absolute; right: -8px; top: 60%;">
                            </span>
                        </div>
                    </div>

                    <div class="col-3">
                        <div class="form-group">
                            <label>Đến</label>
                            <input type="number" name="maxprice" id="maxprice" value="" class="form-control" />
                        </div>
                    </div>
                    <div class="col-2">
                        <div class="form-group">
                            <label>Chọn sản phẩm</label>
                            @Html.DropDownList("ssp", new SelectList(ViewBag.SanPham, "masanpham", "tensanpham"), "", new { @class = "form-control" })

                        </div>
                    </div>
                </div>

                    <div class="row" style="padding: 0px 7.5px;">
                        <div class="input-group input-group-lg">
                            <input type="search" class="form-control form-control-lg" placeholder="Nhập tên công việc" name="sb" id="sb">
                        </div>
                    </div>
                    <div class="row" style="padding: 5px">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-lg btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                    }
            </div>

        </div>
        @*table*@
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-4">
                            <a href="~/Admin/Job/Create" class="btn btn-primary">
                                Thêm mới
                            </a>
                            <a href="~/Admin/Job/Index" class="btn btn-primary">
                                Làm mới danh sách
                            </a>
                        </div>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.TenCongViec)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DinhMucKhoan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonViKhoan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.HeSoKhoan)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DinhMucLaoDong)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DonGia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SanPham.TenSanPham)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenCongViec)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DinhMucKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonViKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeSoKhoan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DinhMucLaoDong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
                    </td>
                    <td>

                        <a class="btn-edit" href="~/Admin/Job/Edit/@item.MaCongViec">
                            <i class="far fa-edit icon-edit"></i>
                        </a>

                        <a class="js-delete" href="~/Admin/Job/Delete/@item.MaCongViec">
                            <i class="far fa-trash-alt icon-delete"></i>
                        </a>

                    </td>
                </tr>
}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false, searching: false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        $("#example1").on("click", ".js-delete", function (event) {
            var button = $(this);

            event.preventDefault();

            bootbox.confirm("Bạn chắc chắn muốn xoá mục này?", function (r) {
                if (r) {
                    window.location = button.attr('href');
                }
            })


        });
    });
</script>